{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/riders-microservices/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/riders-microservices/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/riders-microservices",
  "projects": {
    "logging-service": {
      "type": "application",
      "root": "apps/logging-service",
      "entryFile": "main",
      "sourceRoot": "apps/logging-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/logging-service/tsconfig.app.json"
      }
    },
    "rider-service": {
      "type": "application",
      "root": "apps/rider-service",
      "entryFile": "main",
      "sourceRoot": "apps/rider-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/rider-service/tsconfig.app.json"
      }
    },
    "riders-microservices": {
      "type": "application",
      "root": "apps/riders-microservices",
      "entryFile": "main",
      "sourceRoot": "apps/riders-microservices/src",
      "compilerOptions": {
        "tsConfigPath": "apps/riders-microservices/tsconfig.app.json"
      }
    }
  }
}